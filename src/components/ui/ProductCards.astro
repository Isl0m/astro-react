---
// import { Image } from "@astrojs/image/components"
import type { IProduct } from "../../interfaces/product.interface"

const { id, title, price, images } = Astro.props as IProduct
---

<li
	class="bg-gray-700 hover:-translate-y-2 transition-transform ease-in-out rounded-md"
>
	<a href={`/products/${id}`}>
		<div class="flex flex-col p-4">
			<h1 class="text-3xl font-bold">{title}</h1>
			<p class="text-gray-300">Price: {price}$</p>
		</div>
		<img
			src={images[0]}
			alt={title}
			width={720 * 2}
			class="h-64 rounded-b-md"
		/>
	</a>
</li>
