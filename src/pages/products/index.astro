---
import Layout from "@/layouts/Layout.astro"
import ProductCards from "@/ui/ProductCards.astro"

const response = await fetch("https://api.escuelajs.co/api/v1/products")
const data = await response.json()
---

<Layout title="Products Page">
	<h1 class="text-3xl font-bold">All Product</h1>
	<ul class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
		{data && data.map((item) => <ProductCards client:visible {...item} />)}
	</ul>
</Layout>
